    <% if assertion = actionability.find { |a| a[index].include?(index_id) } %>
        <tr>
          <td><%= info_popover("actionability", "help", "" ,"logo-inline") %></td>
          <td>
            <strong>View report for scoring details</strong>
          </td>

          <td class=" text-center">
          
          </td>
          <td class=" text-center">
            <%= mdy_date(assertion[:date]) %>
          </td>
          <td class=" text-center">
          <% 
            search_text = assertion[:label].split('-')
            if @gene.present? 
              search_gene = @gene.symbol
            elsif
              search_gene = gene.label
            end
          %>
          <a href="https://actionability.clinicalgenome.org/ac/?search=<%= URI.encode(search_text.first) %>%20<%= search_gene %>" target='file' class='btn btn-xs btn-success'>View report</a>
          </td>
        </tr>
    <% end  %>
  </tbody>
