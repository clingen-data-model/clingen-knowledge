<div class="panel panel-default">
  <div class="panel-body">
    <div class='col-sm-5'>
      <dl class='dl-horizontal'>
        <dt>Official Name</dt>
        <dd><%= @condition.label %></dd>
        <dt>Ontological Reference</dt>
        <dd><%= @term_curie %></dd>
        <dt>Definition</dt>
        <dd>@condition.definition</dd>
        <dt>Synonyms</dt>
        <dd>[Synonyms]</dd>
      </dl>
    </div>
    <div class='col-sm-7'>
      <dl class='dl-horizontal'>
        <% if @genes.present? %>
        <dt>Curated Genes</dt>
        <dd>
          <% @genes.each do |g| %>
            <%= link_to g.label, g, {class: "btn btn-xs btn-default"} %>
          <% end %>
        </dd>
        <% end %>
        <dt>External Resources</dt>
        <dd><a href='#infobutton' role="tab" data-toggle="tab">9 external resources located</a></dd>
      </dl>
    </div>
  </div>