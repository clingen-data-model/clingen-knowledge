<div id='condition1' name='condition1' class="row">
  <div class="col-sm-2">
    <h4>
    <%= link_to gene, :class => "text-black"  do %>
      <%= gene.label %> <i class="glyphicon glyphicon-search text-10px text-muted"></i>
    <% end %>
    </h4>
  </div>
  <div class="col-sm-10">
    <% if @validity_detail[gene.uuid] %>
      <%= render "gene_disease_assertions/validity_detail.html.erb", assertions: @validity_detail[gene.uuid], disease: @condition, gene: gene %>
    <% end %>

    <% if @dosage_detail[gene.uuid] %>

      <% if @validity_detail[gene.uuid] %>
        <hr />
      <% end %>
      
      <%= render "gene_dosage/dosage_detail.html.erb", dosage: @dosage_detail[gene.uuid] %>
    <% end %>

    <%#= render "gene_dosage/dosage_detail.html.erb"%>

    <% if @actionability.length > 0 %>
      
      <% if @dosage_detail[gene.uuid] || @validity_detail[gene.uuid] %>
        <hr />
      <% end %>

      <%= render "shared/actionability_detail", actionability: @actionability, disease: @condition, gene: gene, index: :gene, index_id: gene.uuid %>
    <% end %>
  </div>
</div>
