<div id="genes_show" class="container">
  
</div>
<div id="genes_show_summary" role="tabpanel" class="tab-pane active  container results_curation_summary">
  <div class="row">
    <div class="col-sm-12">
      <h2 class="padding-top-xs">
        <%= render 'shared/agent_links_show_views' %>

        <strong><%= @drug.label %></strong>
        </h2>
        <%= render 'drugs/drug_facts' %>

      </div>
    </div>
    <div class="col-sm-12">
      <div class="">
        <ul class="nav nav-tabs">        
          <li>
            <%= link_to drug_path(@drug), :class => ""  do %>
              ClinGen's Curation Summaries
            <% end %>
          </li> 
          <li class="active">
            <%= link_to "External Genomic Resources", drug_external_resources_drugs_path(@drug) %>
          </li>
        </ul>
        <div class="panel panel-default">
          <div class="panel-heading" id='results_curation_summary_heading'>
            <div class="row">
              <div class="col-sm-12">
                External Resources
              </div>
            </div>
          </div>
          <div id='results_curation_summary_details' class="panel-body results_curation_summary_details">
            <%= drug_pharmgkb_dosing_guidelines("link", @drug.label) %><br>
            <%= drug_gtr_clia("link", @drug.label) %><br>
            <%= drug_cpic_pharmacogenomics_guidelines("link", @drug.label) %><br>
            <%= drug_medgen_drug_gene_summary("link", @drug.label) %><br>
            <%= drug_genetic_practice_guidelines("link", @drug.label) %><br>
            <%= drug_omim("link", @drug.label) %><br>
            <%= drug_clinvar_variants_with_drug_response("link", @drug.label) %><br>
            <%= drug_clinvar_medication_ingredient("link", @drug.label) %><br>
            <%= drug_1000_genomes_general_medication("link", @drug.label) %><br>
            <%= gene_gtr_gene_tests("link", @drug.label) %><br>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
