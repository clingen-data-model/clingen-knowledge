<div id="gene_validity_index" class="container">
  <h1>Gene Validity Curation</h1>
  <table class="table table-condensed">
		<thead>
			<th class="col-sm-2">Gene</th>
			<th class="col-sm-7">Disease curated</th>
			<th class="col-sm-3">Clinical Validity Classification</th>
		</thead>
		<tbody>
		<% @assertions.each do |a| %>
			<tr>
				<td>
					<%= link_to genes_path+"/"+a.genes.first.hgnc_id, :method => :get, :class => ""  do %>
				    <%= a.genes.first.label %>
				  <% end %>

				</td>
				<td>
					<%= link_to conditions_path+"/"+a.diseases.first.curie, :method => :get, :class => ""  do %>
						<%= a.diseases.first.label %>
					<% end %>
					<ul class="list-inline">
						<% a.diseases.each do |c| %>
						<li>
							<%= link_to conditions_path+"/"+c.curie, :method => :get, :class => "text-muted text-sm"  do %>
								<%= c.curie.gsub! '_', ':' %>
							<% end %>
						</li>
						<% end %>
					</ul>

				</td>
        		<td><a href="#" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-file"></i> <strong><%= a.interpretation.first.label %></strong> - <%= a.date %></a></td>
			</tr>
  	<% end %>
		</tbody>
	</table>
</div>
