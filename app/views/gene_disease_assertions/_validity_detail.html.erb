<% interp = assertions.interpretation.first %>
<table class="table table-hover  border-left table-condensed">
  <thead>
    <tr>
      <th class="col-sm-10">Gene-Disease Validity</th>
      <th class="col-sm-2 text-center"></th>
    </tr>
  </thead>
  <thead class="thead-labels">
    <tr>
      <th class="col-sm-10">Description</th>
      <th class="col-sm-2 text-center">Date</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
      <%= link_to gene_disease_assertions_path+"/"+assertions.first.perm_id, :method => :get, :class => ""  do %>
        <strong><%= interp.label %></strong>  <i class="glyphicon glyphicon-info-sign text-sm text-muted"></i>
      <% end %>
      </td>
      <td class=" text-center">
        <% if assertions.respond_to?(:date) %>
          <%= assertions.date %>
        <% else %>
          <%= assertions.first.date %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
