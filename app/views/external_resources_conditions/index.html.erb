              <%= image_tag(condition_omim("logo"), class: "margin-left-lg img img-responsive img-rounded") %>
              </div>
              <div class="col-sm-11 col-xs-12">
                  <h4 class="padding-none margin-top-none border-bottom">
                    <%= condition_omim("link", @condition.label) %>
                  </h4>
                <div class="text-sm text-muted">
                  <%= condition_omim("text") %>
                </div>
                <div class="text-sm text-muted margin-top-sm margin-bottom-sm">
                  <%= condition_omim("button", @condition.label) %>
                </div>
              </div>
            </div>

            <div class="row  padding-bottom-lg">
              <div class="col-sm-1 hidden-xs clear-left">
              <%= image_tag(condition_pharmgkb("logo"), class: "margin-left-lg img img-responsive img-rounded") %>
