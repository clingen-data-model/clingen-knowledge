                </div>
                <div class="text-sm text-muted margin-top-sm margin-bottom-sm">
                  <%= condition_clinvar_variants_related_to_genetic_disease("button", @condition.label) %>
                </div>
              </div>
            </div>

            <div class="row  padding-bottom-lg">
              <div class="col-sm-1 hidden-xs clear-left">
              <%= image_tag(condition_1000_genomes("logo"), class: "margin-left-lg img img-responsive img-rounded") %>
              </div>
              <div class="col-sm-11 col-xs-12">
                  <h4 class="padding-none margin-top-none border-bottom">
                    <%= condition_1000_genomes("link", @condition.label) %>
                  </h4>
                <div class="text-sm text-muted">
                  <%= condition_1000_genomes("text") %>
                </div>
                <div class="text-sm text-muted margin-top-sm margin-bottom-sm">
                  <%= condition_1000_genomes("button", @condition.label) %>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    
      <%= render 'shared/external_resources_generic' %>
    </div>
  </div>
</div>
